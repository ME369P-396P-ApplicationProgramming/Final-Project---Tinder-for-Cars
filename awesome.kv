WindowManager:
    FirstWindow:
    SecondWindow:

<FirstWindow>:
    name: "main"

    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Label:
                text: "ZipCode "

            TextInput:
                id: passw
                multiline: False

        Button:
            text: "Price Max"
            on_release:
                app.root.current = "second" if passw.text == "tim" else "main"
                root.manager.transition.direction = "left"


<SecondWindow>:
    name: "second"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
        