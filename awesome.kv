#styling
WindowManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:

# Button Default Colors
<MyButton@Button>:
    background_normal: ''
    background_color: 1, .3, .4, .85
    
#Label Default Font and Color
<MyLabel@Label>:
    color: 1,0,1,1

<tan>:
    Color:      
        rgb: [.84,.78,.79]
<pink>:
    Color:
        rgb: [.9,.46,.51]
<grey>:
    Color:
        rgb: [.85,.85,.85]
<black>:
    Color:
        rgb: [.33,.31,.31]
<beige>:
    Color:
        rgb: [.91,.89,.89]




#navigation default
<NavigationBar>:
    name: "navigationbar"
    FloatLayout:
        size_default: [None,None]
        size_hint: [0.25,0.25]
        pos_hint: [500,500]
        GridLayout:
            MyButton:
                text: "Home"
                on_release:
                    app.root.current = "main"
            MyButton:
                text: "Like"




##Entry Page
<FirstWindow>:
    name: "main"
    canvas:
        Color:
            rgb: [.9,.46,.51]

        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        padding: 200,200
        cols: 1
        GridLayout:
            canvas:
                Color:
                    rgb: [.33,.31,.31]
    
                Rectangle:
                    pos: self.pos
                    size: self.size
            cols:2
            Label:
                text: "ZipCode: "
            TextInput:
                id: zipcode
        GridLayout:
            canvas:
                Color:
                    rgb: [.33,.31,.31]
    
                Rectangle:
                    pos: self.pos
                    size: self.size
            cols:2
            Label:
                text: "Mileage:"
            TextInput:
                id: mileage
        GridLayout:
            canvas:
                Color:
                    rgb: [.33,.31,.31]
    
                Rectangle:
                    pos: self.pos
                    size: self.size
            cols:3
            Label:
                text: "Price Range: "
            TextInput:
                id: min_price
            TextInput:
                id: max_price
        GridLayout:
            cols:1
            Button:
                text: "Submit"
                on_release: 
                    app.root.current = "like"
    FloatLayout:
        pos_hint:{"left":.2,"bottom":.2} 
        size_hint:.15,.15
        GridLayout:
            cols: 1
            Button:
                text: "Like"
                on_release:
                    app.root.current = "like"
            Button:
                text: "Like Storage"
                on_release:
                    app.root.current = "storage"


#like page
<SecondWindow>:
    name: "like"
    canvas:
        Color:
            rgb: [.91,.89,.89]
        Rectangle:
            pos: self.pos
            size: self.size

    RelativeLayout:
        pos_hint: {"top":1,"right":1}
        size_hint: .5,.1                      
        GridLayout:
            
            rows:1
            Button:
                text: "Home"
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            Button:
                text: "Like Page"
                on_release:
                    app.root.current = "storage"
                    root.manager.transition.direction = "left"
            Button:
                text: "More Information"
                on_release:
                    app.root.current = "storage"
                    root.manager.transition.direction = "down"
    RelativeLayout:
        pos_hint: {"bottom":1,"center_x":.5}
        size_hint: .2,.2   
        GridLayout:
            rows:1
            Button:
                text: "YES"
                on_release:
                    id: yes
                    app.root.current = "like"
                    root.manager.transition.direction = "right"
            Button:
                text: "NO"
                on_release:
                    app.root.current = "like"
                    root.manager.transition.direction = "left"
                    
                    
                         

<ThirdWindow>:
    name: "storage"
    FloatLayout:
        pos_hint:{"left":.2,"bottom":.2} 
        size_hint:.2,.2
        GridLayout:
            cols: 1
            Button:
                text: "Like"
                on_release:
                    app.root.current = "like"
            Button:
                text: "Home"
                on_release:
                    app.root.current = "main"
 
<FourthWindow>:
    name: "info"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
