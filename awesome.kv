#styling
WindowManager:
    FirstWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:

# Button Default Colors
<MyButton@Button>:
    background_normal: ''
    background_color: 1, .3, .4, .85
    
#Label Default Font and Color
<MyLabel@Label>:
    color: 1,0,1,1

<tan>:
    Color:      
        rgb: [.84,.78,.79]
<pink>:
    Color:
        rgb: [.9,.46,.51]
<grey>:
    Color:
        rgb: [.85,.85,.85]
<black>:
    Color:
        rgb: [.33,.31,.31]
<beige>:
    Color:
        rgb: [.91,.89,.89]




    #navigation default
<NavigationBar>:
    name: "navigationbar"
    FloatLayout:
        size_default: [None,None]
        size_hint: [0.25,0.25]
        pos_hint: [500,500]
        GridLayout:
            MyButton:
                text: "Home"
                on_release:
                    app.root.current = "main"
            MyButton:
                text: "Like"




##Entry Page
<FirstWindow>:
    name: "main"
    canvas:
        Color:
            rgb: [.9,.46,.51]
            #rgb: [.91,.89,.89]
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        padding: 200,200
        cols: 1
        GridLayout:
            cols:2
            Label:
                text: "ZipCode: "
            TextInput:
                id: zipcode
        GridLayout:
            cols:3
            Label:
                text: "Price Range: "
            TextInput:
                id: min_price
            TextInput:
                id: max_price
        GridLayout:
            cols:1
            Button:
                text: "Submit"
                on_release: "like"
    FloatLayout:
        pos_hint:{"left":.2,"bottom":.2} 
        size_hint:.2,.2
        GridLayout:
            cols: 1
            Button:
                text: "Like"
                on_release:
                    app.root.current = "like"
            Button:
                text: "Like Storage"
                on_release:
                    app.root.current = "storage"


#like page
<SecondWindow>:
    name: "like"
    canvas:
        Color:
            rgb: [.91,.89,.89]
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        size_hint: .2,.2
        anchor_x: "center"
        anchor_y: "top"
        
        # creating Canvas
        GridLayout:
            cols:3
            Button:
                text: "Home"
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            Button:
                text: "Like Page"
                on_release:
                    app.root.current = "storage"
                    root.manager.transition.direction = "left"
            Button:
                text: "More Information"
                on_release:
                    app.root.current = "storage"
                    root.manager.transition.direction = "down"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        size_hint: .2,.2
        GridLayout:
            cols:1
            Button:
                text: "YES"
                on_release:
                    app.root.current = "like"
                    root.manager.transition.direction = "right"
        GridLayout:
            cols:1
            Button:
                text: "NO"
                on_release:
                    app.root.current = "like"
                    root.manager.transition.direction = "left"

<ThirdWindow>:
    name: "storage"
    FloatLayout:
        size_hint:.25,.25
        anchor_x: "center"
        anchor_y: "top"
        Button:
            text: "Go Back"
            on_release:
                app.root.current = "like"
                root.manager.transition.direction = "right"

<FourthWindow>:
    name: "info"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
